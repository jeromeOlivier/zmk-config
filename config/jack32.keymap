#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

#define ALF 0
#define NUM 1
#define NAV 2
#define FUN 3
#define BLU 4

/ {
    behaviors {
        
        ht: hold_tap {
            compatible = "zmk,behavior-hold-tap";
            #binding-cells = <2>;
            flavor = "tap-preferred";
            tapping-term-ms = <200>;
            quick-tap-ms = <125>;
            bindings = <&kp>, <&kp>;
        };

        backdel: BACKSPACE_DELETE {
            compatible = "zmk,behavior-mod-morph";
            #binding-cells = <0>;
            bindings = <&kp BACKSPACE>, <&kp DELETE>;
            mods = <(MOD_LSFT)>;
        };
    };

    combos {
        compatible = "zmk,combos";

        combo_tilde {
            timeout-ms = <50>;
            key-positions = <0 1>;
            layers = <0>;
            bindings = <&kp GRAVE>;
        };

        combo_minus {
            timeout-ms = <50>;
            key-positions = <1 2>;
            layers = <0>;
            bindings = <&kp MINUS>;
        };

        combo_plus {
            timeout-ms = <50>;
            key-positions = <2 3>;
            layers = <0>;
            bindings = <&kp EQUAL>;
        };

        combo_double_quote {
            timeout-ms = <50>;
            key-positions = <6 7>;
            layers = <0>;
            bindings = <&kp SQT>;
        };

        combo_backslash {
            timeout-ms = <50>;
            key-positions = <7 8>;
            layers = <0>;
            bindings = <&kp BSLH>;
        };

        combo_less_than {
            timeout-ms = <50>;
            key-positions = <21 22>;
            layers = <0>;
            bindings = <&kp LT>;
        };

        combo_comma {
            timeout-ms = <50>;
            key-positions = <26 27>;
            layers = <1>;
            bindings = <&kp COMMA>;
        };

        combo_dot {
            timeout-ms = <50>;
            key-positions = <27 28>;
            layers = <1>;
            bindings = <&kp DOT>;
        };

        combo_greater_than {
            timeout-ms = <50>;
            key-positions = <27 28>;
            layers = <0>;
            bindings = <&kp GT>;
        };

        combo_left_bracket {
            timeout-ms = <50>;
            key-positions = <23 10>;
            layers = <0>;
            bindings = <&kp LBKT>;
        };

        combo_left_brace {
            timeout-ms = <50>;
            key-positions = <23 11>;
            layers = <0>;
            bindings = <&kp LBRC>;
        };

        combo_left_parenthesis {
            timeout-ms = <50>;
            key-positions = <23 12>;
            layers = <0>;
            bindings = <&kp LPAR>;
        };

        combo_right_parenthesis {
            timeout-ms = <50>;
            key-positions = <26 17>;
            layers = <0>;
            bindings = <&kp RPAR>;
        };

        combo_right_brace {
            timeout-ms = <50>;
            key-positions = <26 18>;
            layers = <0>;
            bindings = <&kp RBRC>;
        };

        combo_right_bracket {
            timeout-ms = <50>;
            key-positions = <26 19>;
            layers = <0>;
            bindings = <&kp RBKT>;
        };

        combo_bootloader {
            timeout-ms = <50>;
            key-positions = <0 9>;
            layers = <4>;
            bindings = <&bootloader>;
        };
        combo_reset {
            timeout-ms = <50>;
            key-positions = <20 29>;
            layers = <4>;
            bindings = <&sys_reset>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        ALF { bindings = <
                &kp Q       &kp W       &kp F       &kp P       &kp B       &kp J       &kp L       &kp U       &kp Y       &kp SEMI
                &ht LCTRL A &ht LALT R  &ht LCMD S  &ht LSHFT T &kp G       &kp M       &ht RSHFT N &ht RCMD E  &ht RALT I  &ht RCTRL O
                &kp Z       &kp X       &kp C       &lt FUN D   &kp V       &kp K       &lt BLU H   &kp COMMA   &kp DOT     &kp SLASH
                                                                &mo NUM     &lt NAV SPC
            >;
        };

        NUM { bindings = <
                &kp ESC     &none       &none       &none       &none       &none       &kp N1      &kp N2      &kp N3      &backdel
                &kp LCTRL   &kp LALT    &kp LCMD    &kp LSHFT   &none       &none       &kp N4      &kp N5      &kp N6      &kp N0
                &none       &none       &none       &none       &none       &none       &kp N7      &kp N8      &kp N9      &kp RET
                                                                &trans      &kp SPC
            >;
        };

        NAV { bindings = <
                &kp ESC     &none       &kp UP      &none       &none       &none       &none       &none       &none       &backdel
                &kp TAB     &kp LEFT    &kp DOWN    &kp RIGHT   &none       &none       &kp RSHFT   &kp RCMD    &kp RALT    &kp RCTRL
                &none       &none       &none       &none       &none       &none       &none       &none       &none       &kp RET
                                                                &kp CAPS    &trans
            >;
        };

        FUN { bindings = <
                &none       &none       &none       &none       &none       &none       &kp F1      &kp F2      &kp F3      &kp F4
                &kp LCTRL   &kp LALT    &kp LCMD    &kp LSHFT   &none       &none       &kp F5      &kp F6      &kp F7      &kp F8
                &none       &none       &none       &trans      &none       &none       &kp F9      &kp F10     &kp F11     &kp F12
                                                                &none       &kp SPC
            >;
        };
        BLU { bindings = <
                &none       &none       &none       &none       &bt BT_CLR  &none       &none       &none       &none       &none
                &none       &none       &none       &none       &bt BT_PRV  &none       &none       &none       &none       &none
                &none       &none       &none       &none       &bt BT_NXT  &none       &trans      &none       &none       &none
                                                                &none       &none
            >;
        };
    };
};
